
@{
    ViewBag.Title = "Purchase";
}

<h2>Purchase</h2>

<form method="post" action="/operation/purchase/@Model">
    <div>
        <label class="form-label" for="copies">How many copies do you want?</label>
        <input type="text" class="form-control" name="copies" value="1" />
        
        <input type="submit" id="submit" />
        <button type="button" id="btn" class="btn btn-secondary">Submit</button>
    </div>
</form>

<script>
    let sub = document.querySelector("#submit");
    let btn = document.querySelector("#btn");
    btn.addEventListener("click", () => {
        sub.click();
        history.back();
        alert("hello");
    })    
</script>